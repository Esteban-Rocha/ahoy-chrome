{
    "manifest_version": 2, 
    "name": "Ahoy!",
    "description": "Acede a todos os sites bloqueados em Portugal. Uma experiencia de internet livre e sem qualquer tipo de bloqueios.", 
    "version": "2.1.4",
    "icons": { 
    	"16": "icons/16x16.png", 
    	"48": "icons/48x48.png",
    	"128": "icons/128x128.png" 
    	},
    "background": { 
    	"scripts": [
    		"ahoy.js",
    		"background.js"
    	] },

    "browser_action": {
          "default_icon": {
    		"48": "icons/48x48.png"         
          },
          "default_title": "Ahoy",
          "default_popup": "views/popup.html"
        },

    "permissions": [ 
    	"proxy", 
    	"alarms", 
    	"storage", 
    	"tabs", 
    	"webRequest", 
    	"webNavigation", 
    	"webRequestBlocking", 
    	"*://*/", 
    	"http://ahoy.app:8000/" ]
}